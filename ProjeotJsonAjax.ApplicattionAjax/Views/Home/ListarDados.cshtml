@model IEnumerable<ProjeotJsonAjax.ApplicattionAjax.ViewModels.Cliente>
@{
    ViewBag.Title = "ListarDados";
}

<div  class="container">
    <br /><br />
    <h1>@DateTime.Now</h1>
    <div class="panel-success">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-6">
                    <h1 class="panel-title">Lista de Clientes</h1>
                </div>
                <div class="col-sm-4">
                    @using (Ajax.BeginForm("ListarDados","Home",new AjaxOptions { HttpMethod= "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId ="DivListCliente"}))
                    {
                        <div class="form-inline">
                            <div class="form-group">
                                @*<input type="text" class="form-control" name="nome" />*@
                                @Html.TextBox("Pesquisa",null,new { @class="form-control"})
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">
                                    <span class="glyphicon glyphicon-search"> </span>
                                </button>
                            </div>
                        </div>
                    }


                </div>
               
            </div>
            
        </div>
        <div class="panel-body">
            @Html.Partial("_ListarDados",Model)
        </div>
        <div class="panel-footer">
            <label>Total de registro(s)</label> : @Model.Count()
        </div>
    </div>
</div>
